<!DOCTYPE html>
<html>
  <head>
    <title>Journal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <header>
    <div id="site-header">
    
      <h1 id="site-title">meta-tutor</h1>
        <%if false%>
          <div id="header-sign-in-buttons-wrap">
            <button id="header-sign-in">sign in</button>
            <button id="header-sign-in">sign up</button>
          </div>
        <%else%>
        <div id="header-profile-wrap">
        <div id="stars-wrap">
            <div id="outter-star-wrap">
            <p>teach</p>
                <div id="teach-star-wrap" class="star-wrap">
                    <div id="teach-star-content" class="star-content">
                              <p class="star-count">5</p>
                    </div>
                </div>
                
            </div>
            <div id="outter-star-wrap">
            <p>learn</p>
                <div id="learn-star-wrap" class="star-wrap">
                    <div id="learn-star-content" class="star-content">
                    <p class="star-count">5</p>
                    </div>
                </div>
                
            </div>
    
            <div id="outter-star-wrap">
            <p>create</p>
                <div id="create-star-wrap" class="star-wrap">
                    <div id="create-star-content" class="star-content">
                    <p class="star-count">5</p>
                    </div>
                </div>
              
            </div>
            
        </div>
        <div id="header-user-name">
        <% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>
        </div>
    </div>
        <%end%>
    </div>
    <div id="page-header"> page header
        <%= yield :page_links %>
      <%#do a content for yield here%>
    </div>
  </header>
  <div id="flash-notices">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
  <div id="page-frame">

  
    <%= yield %>

</div>
<footer>
  contact us @meta-tutor
</footer>
</body>
</html>
