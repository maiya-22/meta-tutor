                                </form>
                            <%#end%>
                        </div>
                    </div>
                </div>
                
            </div>
            <%answer.comments.each do |comment|%>
                <div class="comment-wrap">
                    <div data-show="comment-<%=comment.id%>"><%=comment.content%></div>
                    <div>comment by @<%=comment.user.name%></div>
