<div id="questions-location-links-wrap">
  <%if @tutorial.format == "chapter"%>
    <p>auto-scroll to the page you are studying</p>
    <% @start_point = @questions[0].page %>
    <% @end_point = @questions.last.page%>
    <%@i = @start_point%>
    <%while @i <= @end_point%>
        <a href="#<%=@i%>">p. <%=@i%></a>
        <%@i+=1%>
    <%end%>
    <p>Start POINT</p>
    <%=@start_point%>
    <p>END POINT</p>
    <%=@end_point%>
  <%elsif @tutorial.format == "video"%>
    It's a video
  <%end%>
</div>

<h1>Questions:</h1>

<%10.times.each do %>
  <%@questions.each do |question|%>
    ******************************<br>
    QUESTION:
    <p><%=question.title%></p>
    <p><%=question.content%></p>
    <p><%=question.user.name%></p>
    <%if @tutorial.format == "video"%>
      <p><%=question.time%></p>
    <%elsif @tutorial.format == "chapter"%>
    <p><%=question.page%></p>
    <%end%>
    <%= link_to 'Show', question %>
    <a href="1">back to top of page</a>
  <%end%>
<%end%>