<% content_for :page_header do %>
  <div id="tutorial-header-frame">
      <div id="video-user-info">
      LINK TO UP-VOTE the presentation
      </div>
      
    <%if @tutorial.format == "video"%>
      <%@duration = @tutorial.video.duration%>
      <%=@duration%>
        <div id="tutorial-video-and-nav">
            <iframe id="tutorial-video" width="560" height="315" src="<%=@tutorial.url%>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen webkitallowfullscreen='true'></iframe>
            <div id="video-question-page-anchors">
              <%100.times do |time|%>

                  <a href="#<%=time%>"><%=@duration%></a>
                <%end%>
            </div>
        </div>
       









    
    <%else%>

    <div style="max-width: 400px" >
    <img src="<%=@tutorial.url%>" style="max-width:100%;" />
    </div>
    <%end%>
    </div>   
<% end %>


<div id="#1">top of page</div>

**  PUT LINKS HERE TO add a question
<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @tutorial.title %>
  </br> tutorial id:
  <%= @tutorial.id %>
</p>

<p>
  <strong>Author:</strong>
  <%= @tutorial.author %>
</p>

<p>
  <strong>Url:</strong>
  <%= @tutorial.url %>
</p>

<p>
  <strong>Format:</strong>
  <%= @tutorial.format %>
</p>

<p>
  <strong>User:</strong>
  <%= @tutorial.user_id %>
</p>
<%= link_to 'Destroy', @tutorial, method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Edit', edit_tutorial_path(@tutorial) %> |
<%= link_to 'Back', tutorials_path %>




<div id="questions-location-links-wrap">
  <%if @tutorial.format == "chapter"%>
    <p>auto-scroll to the page you are studying</p>
    <% @start_point = @questions[0].page %>
    <% @end_point = @questions.last.page%>
    <%@i = @start_point%>
    <%while @i <= @end_point%>
        <a href="#<%=@i%>">p. <%=@i%></a>
        <%@i+=1%>
    <%end%>
    <p>Start POINT</p>
    <%=@start_point%>
    <p>END POINT</p>
    <%=@end_point%>
  <%elsif @tutorial.format == "video"%>
    It's a video
  <%end%>
</div>

<h1>Questions:</h1>

<%10.times.each do %>
  <%@questions.each do |question|%>
    ******************************<br>
    QUESTION:
    <p><%=question.title%></p>
    <p><%=question.content%></p>
    <p><%=question.user.name%></p>
    <%if @tutorial.format == "video"%>
      <p><%=question.time%></p>
    <%elsif @tutorial.format == "chapter"%>
    <p><%=question.page%></p>
    <%end%>
    <%= link_to 'Show', question %>
    <a href="1">back to top of page</a>
  <%end%>
<%end%>